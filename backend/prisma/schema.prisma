generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Condominium {
  id String @id @default(uuid()) @map("_id") @db.ObjectId
  id_imovel String
  nome_condominio String
  cep Int
  rua String
  numero Int
  complemento String
  bairro String
  cidade String
  estado String
  tipo TipoCondominio
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt() @default(now())

  @@map("condominiums")
}

enum TipoCondominio {
  HORIZONTAL
  VERTICAL
}
